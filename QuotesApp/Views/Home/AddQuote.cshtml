@{
}
@model QuoteItem

<form asp-action="AddQuote" method="post">
    <div>
        <label asp-for="Quote">Quote: </label>
        <input class="form-control" asp-for="Quote" required />
    </div>

    <div>
        <label asp-for="QuoteAuthor">Author</label>
        <input class="form-control" asp-for="QuoteAuthor" required />
    </div>

    <div>
        <label asp-for="QuoteDate">Date</label>
        <input asp-for="QuoteDate" type="date" required />
    </div>

    <div>
        <label asp-for="QuoteSubject">Subject</label>
        <input asp-for="QuoteSubject" />
    </div>

    <div>
        <label asp-for="QuoteCitation">Citation</label>
        <input asp-for="QuoteCitation" />
    </div>

    <button class="btn btn-primary" type="submit">Add Quote</button>
    <div asp-validation-summary="All"></div>
</form>
